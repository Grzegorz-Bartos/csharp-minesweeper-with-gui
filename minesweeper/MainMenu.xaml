<Page x:Class="minesweeper.MainMenu"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:minesweeper"
      mc:Ignorable="d" 
      Width="300" Height="260"
      Title="MainMenu">

    <StackPanel>
        <Button x:Name="BT_Start" Click="BT_Start_Click" Content="New Game" Width="120" Margin="0 50 0 0" Style="{DynamicResource Buttons}"/>
        <Button x:Name="BT_Options" Click="BT_Options_Click" Content="Options" Width="120" Margin="0 20 0 0" Style="{DynamicResource Buttons}"/>
        <Button x:Name="BT_Exit" Click="BT_Exit_Click" Content="Exit" Width="120" Margin="0 20 0 0" Style="{DynamicResource Buttons}"/>
        <Label x:Name="Label_Difficulty" Margin="0 40 0 0" HorizontalAlignment="Center" Foreground="White"/>
    </StackPanel>
</Page>
